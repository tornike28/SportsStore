@model SportsStore.services.GetProductsResponse
@{

    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="color:black">Welcome</h1>
</div>


@{foreach (var item in Model.products)
    {
        <div class="container">
            <div class="row">
                <ul class="list-group-flush">
                    <li>
                        <img src="@item.ThumbnailUrl" />
                    </li>
                    <a style="color:black" href="@item.ThumbnailUrl">@item.Name Price- @item.Price$</a>
                </ul>
            </div>
        </div>
    }
}
<body style="background-color:darkgreen">
</body>


